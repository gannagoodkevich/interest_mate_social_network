<div class="my-row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h1><%= @user.name %></h1>
  </div>
  <div class="col-sm-8">
  </div>
  <div class="col-sm-4">
    <%= button_to 'Destroy post', user_post_path(@user, @post),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }, class:  "btn btn-danger"%>
  </div>
  <div class="col-sm-3"></div>
</div>
<div class="my-row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <%= render partial: "posts/tag_form", locals: {my_url: user_post_url, post: @post, categories: @categories} %>
  </div>
</div>