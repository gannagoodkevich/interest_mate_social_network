<p class="lead">
<div class="row">
  <div class="col-sm-1">
  </div>
  <div class="col-sm-2">
    <%= render partial: "users/user_panel", locals: {user: @user} %>
  </div>
  <div class="col-sm-8">
    <h1 class="display-3">Posts:</h1>
    <div id="target-for-change">
      <%= render partial: "form", locals: {my_url: user_posts_path, post: @post} %>
    </div>
    <p>
      <%= render partial: "post", collection: @posts %>
    </p>
  </div>
  <div class="col-sm-2">
  </div>
</div>
</p>