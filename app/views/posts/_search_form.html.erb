<%= bootstrap_form_with(url: main_page_search_path, method: :get, remote: true) do |form| %>
  <%= form.search_field :search%>

  <label class="container">By title
    <%= check_box_tag(:search_parameter, :title) %>
    <span class="checkmark"></span>
  </label>
  <label class="container">By content
    <%= check_box_tag(:search_parameter, :content) %>
    <span class="checkmark"></span>
  </label>
  <label class="container">By author
    <%= check_box_tag(:search_parameter, :author) %>
    <span class="checkmark"></span>
  </label>
<% end %>
