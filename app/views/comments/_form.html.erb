<%= bootstrap_form_with model: comment, url: user_post_comments_path(post_id: @post.id), method: "post" do |form| %>
  <p>
    <%= form.text_area :content%>
  </p>

  <div class="row">
    <div class="col-sm-11">
      <p>
        <%= form.submit class: "btn btn-primary"%>
      </p>
    </div>
    <div class="col-sm-1">
      <%= form.submit 'Cancel', class: "btn btn-secondary", remote: true %>
    </div>
  </div>
<% end %>