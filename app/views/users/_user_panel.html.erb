<p>
  <% if user.photo.nil? %>
    <%= image_tag 'space.png', class: "avatar-circle" %>
  <%else %>
    <% if user.photo.image_data? %>
      <%= image_tag user.photo.image_url(:small), class: "avatar-circle" %>
    <% end %>
  <%end %>
</p>
<% if current_user.admin? %>
  <%if user == current_user %>
    <p>
    <div class="list-group">
      <%= render partial: "users/user_panels/current_user_panel", locals: {user: @user} %>
    </div>
    </p>
    <%else %>
  <p>
  <div class="list-group">
    <%= render partial: "users/user_panels/admin_panel", locals: {user: @user} %>
  </div>
  </p>
    <%end %>
  <%else %>
    <p>
    <div class="list-group">
      <%= render partial: "users/user_panels/user_panel", locals: {user: @user} %>
    </div>
    </p>
<%end %>