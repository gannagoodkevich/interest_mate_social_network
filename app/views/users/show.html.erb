            initMap(<%="53.901130"%>, <%="27.563753"%>)
        });
    </script>
<% end %>
<p>
<div class="row">
  <div class="col-sm-1">
  </div>
  <div class="col-sm-2">
    <%= render partial: "users/user_panel", locals: {user: @user} %>
  </div>
  <div class="col-sm-6">
    <div class="col-sm-6"></div>
    <div class="col-sm-6">
      <p>
        <h2><%= @user.name %> <%= @user.surname %></h2>
